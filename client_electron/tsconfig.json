{
   "compilerOptions": {
      "target": "es5",
      "module": "es2015",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "types": [
         "webpack-env"
      ],
      "paths": {
         "@/*": [
            "src/*"
         ],
         "d/*": [
            "types/*"
         ],
         "*": [
         ]

      },
      "lib": [
         "esnext",
         "dom",
         "dom.iterable",
         "scripthost"
      ]
   },
   "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.tsx"
   ],
   "exclude": [
      "node_modules"
   ]
